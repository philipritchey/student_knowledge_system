<% @courses.each do |course| %>
  <tr class="even:bg-white odd:bg-gray-100 custom-tr hover:bg-gray-200">
    <td>
      <div class="custom-td">
        <%# <strong>Course name:</strong> %>
        <%= course.course_name %>
      </div>
    </td>

    <td>
      <div class="custom-td">
        <%# <strong>Semesters:</strong> %>
        <%= course.semesters.to_a.join(", ") %>
      </div>
    </td>

    <td>
      <div class="custom-td">
        <%= button_to "View profile", course.records.to_a[0], :method=>:get, class: "hover:underline" %>
      </div>
    </td>
  </tr>
<% end %>
