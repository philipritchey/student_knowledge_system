<div class= "flex flex-col">
    <div class = "flex flex-col">
        <h3 class="mx-4 px-5 py-2 text-center w-auto my-2 bg-white border border-2 border-dashed border-gray-300 rounded font-source-serif-pro font-light text-[1.5rem] text-[#500000]">Students in Current View:</h3>
        <div class="overflow-x">
          <table class="w-full h-auto overflow-y-scroll shadow-lg rounded-lg table-fixed mt-2 text-center mb-4">
            <thead> 
              <tr class="bg-slate-400 font-medium font-source-serif-pro">
                <th class="rounded-tl-lg px-auto py-2">Image</th>
                <th class="border-l-[0.05rem] border-r-[0.05rem] px-auto py-2">Name</th>
                <th class="border-l-[0.05rem] border-r-[0.05rem] px-auto py-2">Semester - Section</th>
                <th class="rounded-tr-lg px-auto py-2">View Student Profile</th>
              </tr>
            </thead>
            <tbody>
              <% @student_records.each do |student| %>
                    <tr class="even:bg-gray-100 odd:bg-gray-200 hover:bg-gray-300">
                        <td class="p-4">
                          <%= image_tag student.records[0].base64_image, size: "128x128" %>
                        </td>
                      <td class="font-source-serif-pro font-light">
                        <%=student.records[0].lastname %>, <%=student.records[0].firstname %>
                      </td>
                      <td class="font-source-serif-pro font-light">
                        <%= student.semester_section.to_a.join(", ") %>
                      </td>
                      <td class="font-source-serif-pro font-semibold">
                        <%= button_to "View profile", student.records[0], :method=>:get, class: "hover:underline hover:underline-offset-4 text-[#500000]"  %>
                      </td>
                    </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>
